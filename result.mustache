<!DOCTYPE html PUBLIC "-//IETF//DTD HTML 2.0//EN">
<html>
  <head>
    <title>Route Delay Results</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        padding: 20px;
      }
      .table-container {
        margin: 20px auto;
        width: 80%;
        background-color: #ffffff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 8px;
      }
      h2 {
        text-align: center;
        margin-bottom: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
      }
      th, td {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
      }
      th {
        background-color: #4CAF50;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <div class="table-container">
      <h2>Flight Delay Results for {{origin}} - {{year}}</h2>

      <!-- Average Delays Table -->
      <h3>Average Flight Delay (in mins) by Weather</h3>
      <table>
        <tr>
          <th>Clear</th>
          <th>Fog</th>
          <th>Rain</th>
          <th>Snow</th>
          <th>Hail</th>
          <th>Thunder</th>
          <th>Tornado</th>
        </tr>
        <tr>
          <td>{{avg_clear_dly}}</td>
          <td>{{avg_fog_dly}}</td>
          <td>{{avg_rain_dly}}</td>
          <td>{{avg_snow_dly}}</td>
          <td>{{avg_hail_dly}}</td>
          <td>{{avg_thunder_dly}}</td>
          <td>{{avg_tornado_dly}}</td>
        </tr>
      </table>

      <!-- Total Delays Table -->
      <h3>Total Flight Delay (in mins) by Weather</h3>
      <table>
        <tr>
          <th>Clear</th>
          <th>Fog</th>
          <th>Rain</th>
          <th>Snow</th>
          <th>Hail</th>
          <th>Thunder</th>
          <th>Tornado</th>
        </tr>
        <tr>
          <td>{{total_clear_dly}}</td>
          <td>{{total_fog_dly}}</td>
          <td>{{total_rain_dly}}</td>
          <td>{{total_snow_dly}}</td>
          <td>{{total_hail_dly}}</td>
          <td>{{total_thunder_dly}}</td>
          <td>{{total_tornado_dly}}</td>
        </tr>
      </table>
    </div>
  </body>
</html>
